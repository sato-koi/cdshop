<div class="col-md-10 offset-md-1 mt-5">
  <div class="row">
    <div class="col-md-4 mb-4">
    <%= show_artist_image @artist %>
    </div>
    <div class="col-md-8">
      <h2><%= @artist.name %></h2>
      <ul>
        <li><b><%= t ".url" %>: </b><%= @artist.url %></li>
      </ul>
    </div>
  </div>
  </ul>
  <hr>
  <h4><%= t ".description" %></h4>
  <%= simple_format @artist.description %>
  <%= link_to t(".edit"), edit_artist_path(@artist), class: "btn btn-primary" %>
  <%= button_tag t(".delete"), class: "btn btn-warning", data: { toggle: "modal", target: "#delete-artist" } %>
  <%= link_to t(".return"), artists_path, class: "btn btn-secondary" %>
</div>

<div class="modal fade" id="delete-artist">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= t(".modal_title") %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p><%= t(".question_artist", artist: @artist.name) %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t(".chancel") %></button>
        <%= link_to t(".delete_action"), artist_path(@artist), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>